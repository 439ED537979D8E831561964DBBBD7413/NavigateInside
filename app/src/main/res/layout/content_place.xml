<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pageLayout">

    <!-- <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>-->

    <TextView
        android:id="@+id/node_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center_horizontal"/>


    <ImageView
        android:id="@+id/sell_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_menu_camera"
        android:clickable="true"
        android:maxHeight="250dp"
        android:maxWidth="250dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:onClick="onClickCam"
        android:scaleType="fitXY"
        android:layout_below="@+id/node_name" />


    <TextView
        android:id="@+id/node_direct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30sp"
        android:layout_alignTop="@+id/arrive_check"
        android:layout_alignStart="@+id/sell_img"
        android:layout_marginStart="13dp" />

    <CheckBox
        android:id="@+id/arrive_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="162dp"
        android:text="@string/checkbox"
        android:layout_marginStart="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/node_direct" />


</RelativeLayout >